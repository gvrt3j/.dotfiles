# sxhkdrc

# windowchef
super + {h,j,k,l}
	waitron window_move {-20 0, 0 20, 0 -20, 20 0}

super + alt + {h,j,k,l}
	waitron window_resize {-20 0, 0 20, 0 -20, 20 0}

super + shift + {h,j,k,l}
	waitron window_move {-100 0, 0 100, 0 -100, 100 0}

super + shift + alt + {h,j,k,l}
	waitron window_resize {-100 0, 0 100, 0 -100, 100 0}

alt + {h,j,k,l}
	waitron window_cardinal_focus {left,down,up,right}

super + alt + Escape
	waitron wm_quit 0

super + f
	waitron window_maximize

super + w
	waitron window_close

super + b
	waitron window_hor_maximize

super + v
	waitron window_ver_maximize

super + m
	waitron window_monocle

alt + Tab
	waitron window_cycle

alt + shift + Tab
	waitron window_rev_cycle

alt + ctrl + Tab
	waitron window_focus_last

super + {_,shift +}{1-9}
	waitron {group_toggle,group_add_window} {1-9}

super + ctrl + r
	waitron group_remove_window

super + alt + ctrl + {1-4}
	waitron group_remove_all_windows {1-4}

super + {Insert,Prior,Delete,Next,End}
	waitron window_snap {topleft,topright,bottomleft,bottomright,middle}

super + {Up,Down,Left,Right,c}
	waitron window_put_in_grid {1 2 0 0,1 2 0 1,2 1 0 0,2 1 1 0,3 3 1 1}

# Programs
super + Return
	urxvt -e sh -c '[ -z "$TMUX" ] && (tmux attach || tmux new-session)'

super + ctrl + Return
	st -e sh -c '[ -z "$TMUX" ] && (tmux attach || tmux new-session)'

super + ctrl + p
	dmenu_wrapper passmenu

super + @space
	dmenu_wrapper dmenu_run

# Audio control
XF86AudioRaiseVolume
	ponymix --output increase 2 -N; ponymix --output unmute

XF86AudioLowerVolume
	ponymix --output decrease 2 -N; ponymix --output unmute

XF86AudioMute
	ponymix --output toggle -N

# Brightness control
XF86MonBrightnessUp
	light -A 2
XF86MonBrightnessDown
	light -U 2

# Reload
## sxhkd
super + Escape
	pkill -USR1 -x sxhkd

## wm
super + shift + r
	reloadconf
