#!/bin/sh

. $XDG_RUNTIME_DIR/xcolors
. $XDG_RUNTIME_DIR/xenv

cat <<CONF
[global]
geometry = "0x5-${GENERAL_GAP}+${GENERAL_GAP}"
separator_height = "$((${BORDER_WIDTH} / 4))"
padding = "${GENERAL_PADDING}"
horizontal_padding = "${GENERAL_PADDING}"
frame_width = "$((${BORDER_WIDTH} / 4))"
frame_color = "${xres_foreground}"
separator_color = frame
font = UW Ttyp0 7
markup = full
format = "<b>%s</b> %p\n%b"
show_age_threshold = 60
dmenu = "$(which dmenu_wrapper)"
browser = "$(which ${BROWSER})"

[shortcuts]
close = ctrl+space
close_all = ctrl+shift+space
history = ctrl+grave
context = ctrl+shift+period

[urgency_low]
background = "${xres_background}"
foreground = "${xres_foreground}"
timeout = 10

[urgency_normal]
background = "${xres_background}"
foreground = "${xres_foreground}"
timeout = 10

[urgency_critical]
background = "${xres_foreground}"
foreground = "${xres_background}"
timeout = 0
CONF
